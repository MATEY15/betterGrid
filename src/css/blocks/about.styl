.section-breadcrumbs
  min-height 86px
  display flex
  align-items center
.breadcrumbs-list
  ul
    display flex
    li
      display flex
      align-items center
      &:not(:last-child)
        &:after
          position relative
          content ''
          width 8px
          height 10px
          display block
          background-image url(../img/arrow-right.svg)
          background-repeat no-repeat
          margin-left 16px
          margin-right 12px
      a
        font-family: fl
        font-size: 16px
        line-height: 1.6
        color: #29354D
        text-decoration none
      span
        font-family: fm
        font-size: 16px
        line-height: 1.6
        color: #050F2C

.section-heading
  position relative
  min-height 465px
  display flex
  align-items center
  background-repeat no-repeat
  background-position center center
  background-size cover
  &:before
    position absolute
    top 0
    left 0
    display block
    content ''
    width 100%
    height 100%
    background: rgba(41, 53, 77, 0.5)
  .container
    position relative
  .heading-wrapper
    max-width 780px
    margin 0 auto
    text-align center
    h1
      font-family: fb
      font-size: 60px
      line-height: 1.4
      color: #FFFFFF

.section-custome
  padding-top 50px
  padding-bottom 70px

.line-block--wrapper
  height 100%
  display flex
  align-items center
  padding-left 30px

.line-block
  position relative
  min-height: 190px
  padding 30px
  display flex
  align-items center
  justify-content center
  text-align center
  max-width 310px
  width 100%
  .line-top
    position absolute
    top 0
    left 0
    &:before,
    &:after
      position absolute
      top 0
      left 0
      background #207D87
      display block
      content ''
    &:before
      height 90px
      width 2px
    &:after
      width 240px
      height 2px

  .line-bottom
    position absolute
    bottom 0
    right 0
    &:before,
    &:after
      position absolute
      bottom 0
      right 0
      background #207D87
      display block
      content ''
    &:before
      height 90px
      width 2px
    &:after
      width 240px
      height 2px
  p
    font-family: fm
    font-size: 30px
    line-height: 1.5
    color: #29354D

.custome-text
  h3
    margin-bottom 0
  p
    line-height 1.8
    &:not(:first-child)
      margin-top 20px

.section-offer
  display flex
  align-items center
  min-height 140px
  padding 20px 0
  &.offer-green
    background: #207D87
    .offer-icon
      background #4D979F
  &.offer-blue
    background #29354D
    .offer-icon
      background #485165

.offer-wrapper
  display flex
  align-items center
  justify-content center

.offer-text
  display flex
  align-items center
  font-family: fm
  font-size: 24px
  line-height: 1.5
  color: #FFFFFF
  margin-right 60px

.offer-icon
  display flex
  align-items center
  justify-content center
  width 60px
  height 60px
  margin-right 25px
  brr(50%)


.section-mision
  padding 100px 0 170px
  background #F7FBF8

.earth-item
  position relative
  max-width 465px
.earth-images
  width 100%
  max-height: 370px
  overflow hidden
  img
    width 100%
    height 100%
    object-fit: cover
.earth-text
  position absolute
  bottom -70px
  left 50%
  tt(-50%, 0)
  padding 44px 30px 40px
  max-width: 250px
  max-height: 220px
  background: #207D87
  p
    color #fff
  .icon-quote
    margin 5px 5px 25px

.mision-text
  height 100%
  display flex
  flex-direction column
  justify-content flex-end
  h3
    margin-bottom 0
    font-family: fb
    font-size: 60px
    line-height: 72px
    color: #29354D
  p
    line-height 1.8
    &:not(:first-child)
      margin-top 20px



.green-scale
  position relative
  min-height 440px
  display flex
  align-items center
  padding-left 100px
  
  &:after
    position absolute
    top 0
    right 80%
    display block
    content ''
    width 2000px
    height 100%
    background #B8E0C3
  &:before
    position absolute
    top 0
    left 0
    display block
    content ''
    width 100%
    max-width 535px
    height 100%
    background #B8E0C3
    transform skewX(25deg)
  h3
    position relative
    font-family: fb
    font-size: 60px
    line-height: 1.3
    color: #29354D
    z-index 10
    margin-bottom 0

.wrapper-value
  display flex
  flex-wrap wrap
  flex-direction column
  // align-items center
  justify-content center
  padding 40px 0
  padding-left 70px
  height 100%

  .item-values
    width 50%
    height calc(100% / 3)
    // margin 30px 0
    display flex
    align-items center
    .icon-values
      width 60px
      height 60px
      display flex
      align-items center
      justify-content center
      background: rgba(32, 125, 135, 0.2)
      brr(50%)
      margin-right 30px
    p
      font-family: fm
      font-size: 20px
      line-height: 1.5
      color: #29354D

.section-map
  background #207D87
  padding-top 100px
  padding-bottom 60px

.map-content
  height 100%
  display flex
  flex-direction column
  justify-content center
  color #fff
  h3
    font-family: fb
    font-size: 60px
    line-height: 72px
    color: #FFFFFF
  p
    color: #FFFFFF

.section-partner
  padding 100px 0
  background #F7FBF8

.partner-heading
  margin-bottom 70px
  text-align center
  h3
    font-family: fb
    font-size: 60px
    line-height: 72px
    color: #29354D

.partner-wrapper
  min-height: 150px
  background: #FFFFFF
  box-shadow: 0px 6px 44px rgba(15, 20, 16, 0.08)
  border-radius: 4px
  padding 20px 60px
  display flex
  align-items center
  justify-content space-between