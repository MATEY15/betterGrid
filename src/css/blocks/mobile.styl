@media screen and (max-width: 1399px)
  .menu-main li:not(:last-child)
    margin-right 15px
  .images-step img
    width auto
  .slide-text
    padding-right 80px

@media screen and (max-width: 1199px)
  .burger-menu
    display flex
  .menu-main
    position absolute
    top 0
    left 0
    width 100%
    max-width 540px
    height 100vh
    background #29354D
    padding 20px
    trn(.2s)
    opacity 0
    visibility hidden
    tt(-540px, 0)
    &.is-active
      opacity 1
      visibility visible
      tt(0px, 0)
    ul
      flex-direction column
      margin 0 auto
  .menu-main li a
    font-size 18px
  .top-line.fixed .menu-main li a
    color #fff
  .menu-main li:not(:last-child)
    margin-right 0
    margin-bottom 20px
  .get-more--form h3
    br
      display none

@media screen and (max-width: 991px)
  .logo-col
    text-align center
  .logo-footer
    margin: 0 auto 40px
  .logo-col
    width 100%
  .contact-col,
  .social-col
    width 50%
  .started-wrapper h3
    color: #fff
    font-size: 42px
    line-height: 60px
    margin-bottom: 40px
  .strep-wrapper
    .col-md-3
      width 50%
      margin-bottom 30px
  .section-step
    padding 70px 0 40px
  .author-quote
    margin-top 10px
    text-align left
    p
      margin-bottom 0
  .slide-images--col
    display flex
    align-items center
  .slide-text
    p
      line-height 1.4
  .section-slider
    padding-bottom 40px
  .quote-icon
    width: 80px
    height: 80px
    bottom: -15px
    right: -15px
  .slider-comment
    .col-md-5,
    .col-md-7
      width 50%
  .slide-text
    padding-right 30px
  .text-buy
    padding-top: 100px
    padding-bottom: 80px
  .header-content h1
    font-size: 56px
    line-height: 76px
  .header-content p
    font-size 28px
  .header-content .button-green
    margin-top 40px
  .section--get-more
    padding-top 80px
  .get-more--form:before
    left: 10px
    top: 10px
    width: calc(100% - 20px)
    height: calc(100% - 20px)
  .get-more--form:after
    top: 15px
    left: -15px
  .get-more--form
    padding 35px 25px 35px
  .get-more--form h3
    font-size: 24px
    line-height: 1.3
  .get-more--content h3,
  h3
    font-size: 22px
    line-height: 1.3
  .get-more--form form button
    margin-top 25px
  .input-items input
    height 40px
    padding 10px 15px

@media screen and (max-width: 767px)
  .header-content h1
    font-size: 44px
    line-height: 54px
  .header-content p
    font-size 22px
    margin-top 14px
  .header-content .button-green
    margin-top 25px
  .slider-comment .col-md-5, .slider-comment .col-md-7
    width 100%
  .slide-text
    padding 0
  .slide-images
    margin-bottom 30px
  .slider-comment .slick-dots
    position relative
    display flex
    justify-content center
    tt(0,0)
  .slider-comment .slick-list
    padding-bottom 15px
  .slider-comment .slick-dots li:not(:last-child)
    margin-bottom 0
    margin-right 6px
  .header-content
    height 100%
    min-height 540px
  .top-line .container
    min-height: 60px
  .menu-item
    // margin-top 20px
  .logo-white
    max-width 133px
  .top-line
    padding-top 15px
  .top-line .container
    align-items flex-start
  .menu-main
    max-width 360px
  .get-more--form
    margin-bottom 45px
  .text-buy
    padding 60px 0
  .section--get-more
    padding-top 60px
  h3
    margin-bottom 10px
  .default-text--images
    margin-top 30px
    max-width 100%
  .section-slider
    padding-top 60px
  .section-started .container
    min-height 350px
  .default-text--images
    overflow hidden
    max-height: initial

@media screen and (max-width: 575px)
  .quote-icon
    right 0
    bottom 0
  .get-more--form:after
    display none
  .list-contact li a, .list-contact li span
    font-size 14px
  .foot-link li
    margin-right 20px

@media screen and (max-width: 500px)
  .footer h4
    text-align center
  .list-contact li a
    justify-content center
  .list-contact li a, .list-contact li span
    font-size 16px
  .footer
    padding-top 40px
  .contact-col, .social-col
    width 100%
  .social-col
    padding-top 30px
  .foot-link
    margin 0 auto
  .social-list
    justify-content center
  .login-item
    display none
  p
    font-size: 15px
    line-height: 1.4
  .step-items--content h3
    margin-bottom 10px
  .started-wrapper h3
    font-size: 34px
    line-height: 40px

@media screen and (max-width: 425px)
  .menu-main
    max-width 260px
  .strep-wrapper .col-md-3
    width 100%