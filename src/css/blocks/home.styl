.section--get-more
  padding-top 130px

.get-more--form
  position relative
  max-width 510px
  background: #FFFFFF
  box-shadow: 0px 6px 44px rgba(15, 20, 16, 0.08)
  border-radius: 4px
  padding 58px 40px 55px
  margin 0 auto
  &:before
    position absolute
    display block
    content ''
    left 15px
    top 15px
    width calc(100% - 30px)
    height calc(100% - 30px)
    border: 1px solid #99D2A8
    border-radius: 4px
  &:after
    position absolute
    top 30px
    left -30px
    display block
    max-width 510px
    height 100%
    width 100%
    content ''
    background: #99D2A8
    opacity: 0.6
    box-shadow: 0px 6px 44px rgba(15, 20, 16, 0.08)
    border-radius: 4px
    z-index -1

  .icon-check
    position relative
    display flex
    align-items center
    justify-content center
    width 55px
    height 55px
    background #EBF6EE
    brr(50%)
    margin 0 auto 27px

  h3
    position relative
    font-family: fm
    font-size: 30px
    line-height: 1.5
    color: #29354D
    text-align center
    margin-bottom 30px
  
  form
    position relative
    button
      display block
      margin 40px auto 0

.input-items
  margin-bottom 25px
  input
    position relative
    display block
    height 60px
    width 100%
    max-width 370px
    border: 1px solid #99D2A8
    border-radius: 4px
    font-family: fr
    font-size: 16px
    line-height: 1.6
    color: #B3B3B3
    margin 0 auto
    padding 17px 20px

    &::-webkit-input-placeholder
      color: #B3B3B3
      font-family: fr
      font-size: 16px
    &::-moz-placeholder
      color: #B3B3B3
      font-family: fr
      font-size: 16px
    &:-ms-input-placeholder
      color: #B3B3B3
      font-family: fr
      font-size: 16px
    &:-moz-placeholder
      color: #B3B3B3
      font-family: fr
      font-size: 16px


.get-more--content
  height 100%
  display flex
  flex-direction column
  justify-content center
  h3
    font-family: fm
    font-size: 24px
    line-height: 1.5
    color: #29354D
    margin-bottom 20px
  p
    font-family: fl
    font-size: 16px
    line-height: 1.6
    color: #29354D

.text-buy
  padding-top 130px
  padding-bottom 130px

  .text-center
    height 100%
    display flex
    flex-direction column
    justify-content center

.section-slider
  padding-top 70px
  padding-bottom 70px
  background: #F7FBF8

.slider-comment
  .slick-list
    padding-bottom 30px
  .slick-dots
    position absolute
    right 0
    top 50%
    tt(0, -50%)
    li
      line-height 0
      &:not(:last-child)
        margin-bottom 10px
      &.slick-active
        button
          background #207D87
      button
        font-size 0
        width 11px
        height 11px
        background #B3B3B3
        brr(50%)

.slide-images
  position relative
  max-width 470px
  max-height: 340px
  &>img
    width 100%
    height 100%
    max-height: 340px
    object-fit: cover

.default-text--images
  position relative
  max-width 500px
  max-height: 340px
  margin-left auto
  img
    object-fit: cover
    width 100%
    height 100%

.quote-icon
  position absolute
  bottom -30px
  right -30px
  display flex
  justify-content center
  align-items center
  width 120px
  height 120px
  background #207D87

.slide-text
  padding-right 100px
  padding-left 10px

.author-quote
  text-align right
  margin-top 15px
  p
    font-family: fm
    font-size: 16px
    line-height: 1.6
    color: #29354D
    margin-bottom 5px
  span
    display inline-block
    font-family: fl
    font-style: italic
    font-size: 16px
    line-height: 1.6
    color: #29354D


// Step

.section-step
  padding-top 100px
  padding-bottom 100px

.step-items
  max-width 270px
  margin 0 auto

.images-step
  box-shadow: 0px 6px 44px rgba(15, 20, 16, 0.08)
  border-radius: 4px
  overflow hidden
  max-height: 200px
  img
    width 100%
    height 100%
    object-fit: cover

.icon-step--wrap
  position relative
  display flex
  align-items center
  justify-content center
  width 90px
  height 90px
  brr(50%)
  background #fff
  margin -45px auto 0
  .icon-step
    display flex
    align-items center
    justify-content center
    width 60px
    height 60px
    brr(50%)
    background rgba(32, 125, 135, 0.4)

.step-items--content
  margin-top 14px
  h3
    margin-bottom 15px
    text-align center


// Started

.section-started
  position relative
  background-repeat no-repeat
  background-position center center
  background-size cover
  
  &:before
    position absolute
    top 0
    left 0
    display block
    content ''
    width 100%
    height 100%
    background: #29354D
    opacity: 0.5
  
  .container
    position relative
    display flex
    min-height 475px
    align-items center

.started-wrapper
  max-width 810px
  margin 0 auto
  text-align center

  h3
    color #fff
    font-size: 60px
    line-height: 72px
    margin-bottom 60px